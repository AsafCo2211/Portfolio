<Window x:Class="Frontend.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.View"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Welcome Title -->
        <TextBlock Text="Welcome to Kanban!" 
               FontSize="28" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,0,0,20"
               Grid.Row="0"/>

        <!-- Email -->
        <Grid Margin="0,60,0,10" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Email:" FontWeight="SemiBold" 
               VerticalAlignment="Center" Margin="180,0,510,0" Grid.Column="1"/>
            <TextBox x:Name="EmailBox" Grid.Column="1" Width="300" Height="30" Text="{Binding Email, Mode=TwoWay}"/>
        </Grid>

        <!-- Password -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Password:" FontWeight="SemiBold" 
               VerticalAlignment="Center" Margin="160,0,490,0" Grid.Column="1"/>
            <PasswordBox x:Name="PasswordBox" Grid.Column="1" Width="300" Height="30" PasswordChanged="PasswordBox_PasswordChanged"/>
        </Grid>


        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="Login_Button" Content="Login" Width="120" Margin="10,0" Click="Login_Click" IsDefault="True"/>
            <Button x:Name="Register_Button" Content="Register" Width="120" Margin="10,0" Click="Register_Click"/>
        </StackPanel>

        <!-- Feedback Message -->
        <TextBlock x:Name="FeedbackText" Grid.Row="4"
               Foreground="Black" FontWeight="Bold"
               HorizontalAlignment="Center" Margin="0,20,0,0" Text="{Binding Path=ErrorMessage, Mode=OneWay}"/>
    </Grid>

</Window>
