<Window x:Class="Frontend.View.BoardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BoardView" Height="720" Width="1360">
    <Grid>
        <!-- 1. Three rows: header / boards / footer -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 2. HEADER: User@center + Logout@right -->
        <Grid Grid.Row="0" Margin="10">
            <!-- User email centered in the full width -->
            <TextBlock Text="{Binding Path=Email, StringFormat=User: {0}}"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <!-- Logout button pinned to the right -->
            <Button VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Height="30"
                    Click="Logout_Button">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Logout"
                               FontSize="14"/>
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               Text="&#xF3B1;"
                               FontSize="18"
                               Margin="5,0,0,0"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- 3. BOARDS: wrap‐panel that left-aligns, cards capped at 300px -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <ItemsControl ItemsSource="{Binding Boards}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- ensure children start at the left -->
                        <WrapPanel HorizontalAlignment="Left"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="10"
                                Margin="5"
                                HorizontalAlignment="Left"
                                MaxWidth="300">
                            <StackPanel>
                                <!-- VIEW + info -->
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <Button Width="90"
                                            Height="35"
                                            Margin="0,0,10,0"
                                            Click="View_Board_Click">
                                        <StackPanel Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                       Text="&#xE7B3;"
                                                       FontSize="18"/>
                                            <TextBlock Text="View"
                                                       FontSize="14"
                                                       Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                    <StackPanel>
                                        <TextBlock Text="{Binding BoardName}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding BoardOwner}"
                                                   FontSize="12"
                                                   Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Delete with trash icon -->
                                <Button Width="90"
                                        Height="30"
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Left"
                                        Click="Delete_Board_Click"
                                        CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE74D;"
                                                   FontSize="18"/>
                                        <TextBlock Text="Delete"
                                                   FontSize="14"
                                                   Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 4. FOOTER: Create + feedback -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Width="140"
                    Height="35"
                    Margin="5"
                    Click="Create_Board_Button">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               Text="&#xE710;"
                               FontSize="18"/>
                    <TextBlock Text="Create Board"
                               FontSize="14"
                               Margin="5,0,0,0"/>
                </StackPanel>
            </Button>

            <TextBlock x:Name="FeedbackText"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       TextWrapping="Wrap"
                       Foreground="Red"/>
        </Grid>
    </Grid>
</Window>
