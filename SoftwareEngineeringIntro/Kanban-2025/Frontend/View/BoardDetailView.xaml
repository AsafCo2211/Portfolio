<Window x:Class="Frontend.View.BoardDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Board Details"
        Width="640"
        Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Owner -->
            <RowDefinition Height="Auto"/>
            <!-- Members -->
            <RowDefinition Height="*"/>
            <!-- Columns & Tasks -->
            <RowDefinition Height="Auto"/>
            <!-- Close button -->
        </Grid.RowDefinitions>

        <!-- 1. Owner with person icon -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
            <TextBlock FontFamily="Segoe MDL2 Assets"
                       Text="&#xE77B;"
                       FontSize="16"
                       Margin="0,0,5,0"
                       VerticalAlignment="Center"/>
            <TextBlock Text="Owner: "
                       FontWeight="Bold"
                       FontSize="14"
                       VerticalAlignment="Center"/>
            <TextBlock Text="{Binding BoardOwner}"
                       FontSize="14"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- 2. Members with group icon -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock FontFamily="Segoe MDL2 Assets"
                           Text="&#xE125;"
                           FontSize="16"
                           Margin="0,0,5,0"
                           VerticalAlignment="Center"/>
                <TextBlock Text="Members:"
                           FontWeight="Bold"
                           FontSize="14"
                           VerticalAlignment="Center"/>
            </StackPanel>
            <ItemsControl ItemsSource="{Binding Members}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Margin="2,1">
                            <TextBlock.Inlines>
                                <Run Text="• "/>
                                <Run Text="{Binding Path=., Mode=OneWay}"/>
                            </TextBlock.Inlines>
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- 3. Columns & Tasks -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Columns}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="8"
                                Margin="0,0,0,10">
                            <StackPanel>
                                <!-- Column header -->
                                <TextBlock Text="{Binding Type}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>

                                <!-- Tasks in this column -->
                                <ItemsControl ItemsSource="{Binding Tasks}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- each task with bottom border for separation -->
                                            <Border BorderBrush="LightGray"
                                                    BorderThickness="0,0,0,1"
                                                    Padding="5,4"
                                                    Margin="0,0,0,5">
                                                <StackPanel>
                                                    <!-- Title -->
                                                    <TextBlock Text="{Binding Title}"
                                                               FontWeight="Bold"/>

                                                    <!-- Assignee -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                        <TextBlock Text="Assignee: "
                                                                   FontStyle="Italic"/>
                                                        <TextBlock Text="{Binding Assignee}"/>
                                                    </StackPanel>

                                                    <!-- Due Date -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Due: "
                                                                   FontStyle="Italic"/>
                                                        <TextBlock Text="{Binding DueDate}"/>
                                                    </StackPanel>

                                                    <!-- Creation Time -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Created: "
                                                                   FontStyle="Italic"/>
                                                        <TextBlock Text="{Binding CreationTime}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 4. Close button -->
        <Button Grid.Row="3"
                Content="Close"
                Width="75"
                HorizontalAlignment="Right"
                Margin="0,10,0,0"
                Click="Close_Button"/>
    </Grid>
</Window>
